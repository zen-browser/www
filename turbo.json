{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "lint": {
      "cache": true,
      "inputs": ["**/*{ts,tsx,js,jsx,astro}"],
      "outputs": []
    },
    "format": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro,json,yml,yaml}"],
      "outputs": []
    },
    "build": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro,json}"],
      "outputs": ["dist/**"]
    },
    "test": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": []
    },
    "spell": {
      "cache": true,
      "inputs": ["src/**/*.{ts,tsx,js,jsx,astro,md,json,yml,yaml}"],
      "outputs": []
    },
    "test:e2e": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:shard1": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:shard2": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:shard3": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:shard4": {
      "cache": true,
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:all": {
      "cache": true,
      "dependsOn": ["test:e2e:shard1", "test:e2e:shard2", "test:e2e:shard3", "test:e2e:shard4"],
      "inputs": ["**/*.{ts,tsx,js,jsx,astro}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    }
  },
  "ui": "tui"
}
